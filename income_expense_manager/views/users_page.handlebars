<div class="content">
    <br>
    <h3>Manage User</h3>
    <br>
</div>

<form id="users-form" method="POST" action="">
    <div class="form-group row">

        <div class="col-sm-6">
            <label for="first-name-input">
                First name
            </label>
            <input type="text" name="first_name" class="form-control" id="first-name-input" value="{{first_name}}" required>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            <label for="last-name-input">
                Last name
            </label>
            <input type="text" name="last_name" class="form-control" id="last-name-input" value="{{last_name}}" required>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            <label for="email-input">
                Email
            </label>
            <input type="text" name="email" class="form-control" id="email-input" value="{{email}}" required>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            <label for="password-input">
                New Password
            </label>
            <input type="password" name="password" class="form-control" id="password-input" required>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            <label for="password-reinput">
                Retype Password
            </label>
            <input type="password" name="repassword" class="form-control" id="password-reinput" required>
        </div>
    </div>
    <button type="submit">Update</button>
</form>

<script src="js/users_page.js"></script>