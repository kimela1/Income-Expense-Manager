<div class="content">
    <h3 class="title is-3">Categories</h3>
</div>

<!-- Search box -->
<form id="search-categories" class="form-inline" action="" method="">
    <label for="search" class="sr-only">Search by category name</label>
    <input type="text" class="form-control" id="search_name" placeholder="Search by name">
    <button type="submit" class="btn" id="search-submit" onclick="categories_search()">Search</button><br><br>
</form>

<!-- Add to categories-->
<form id="add-categories" action="/categories" method="post" class="form-inline" >
    <input type="text" name="category_name" placeholder="Enter new category name" class="form-control">
    {{#each categories}}
    <option value="{{id}}">{{name}}</option>
    {{/each}}
    <button type="submit" class="btn" id="add-submit">➕ Category</button><br><br>
</form>

<!-- Table -->
<table class="table table-striped" id="categories-table">
    <thead>
        <tr>
            <th scope="col">Category Name</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody id="categories-tbody">
        {{#each categories}}
        <tr> 
            <td>{{category_name}}</td> 
            <td>
                <button onclick="update_categories({{id}})">📝</button>
                <button onclick="delete_categories({{id}})">❌</button>
            </td>
        </tr> 
        {{/each}} 
    </tbody>
</table>

<script src="js/categories.js"></script>
<script src="js/categories_page.js"></script>