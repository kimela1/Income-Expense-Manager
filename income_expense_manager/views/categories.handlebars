<div class="content">
    <br>
    <h3 class="title is-3">Categories</h3>
</div>

<!-- Search box -->
<form id="search_categories" class="form-inline">
    <div class="col-auto">
        <br>
        Search: 
        <input type="text" class="form-control" id="search_name" placeholder="Filter by category name" onkeyup="categories_search()">
    </div>
</form>

<!-- Add to categories-->
<form id="add-categories" action="/add_categories" method="post" class="form-inline" >
    <div class="col-auto">
        Add a new category: 
        <input type="text" name="category_name" placeholder="New category name" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-secondary" id="add-submit">➕ Category</button><br><br><br>
</form><br>

<!-- Table -->
<table class="table table-striped" id="categories_table">
    <thead>
        <tr>
            <th scope="col">Category Name</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody id="categories-tbody">
        {{#each categories}}
        <tr> 
            <td>{{category_name}}</td> 
            <td>
                <button><a href="/update_categories/{{category_id}}">📝</a></button>
                <button onclick="delete_categories({{category_id}})">❌</button>
            </td>
        </tr> 
        {{/each}} 
    </tbody>
</table>

<script src="js/categories.js"></script>