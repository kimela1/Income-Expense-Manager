<div class="content">
    <h3 class="title is-3">Transactions</h3>
</div>

<table class="table table-striped" id="transactions-table">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Amount</th>
        <th scope="col">Date</th>
        <th scope="col">Type</th>
        </tr>
    </thead>
    <tbody id="transactions-tbody">
        <tr>
        <th scope="row">1</th>
        <td>+100.00</td>
        <td>10/16/2019</td>
        <td>Income</td>
        </tr>
        <tr>
        <th scope="row">2</th>
        <td>-24.36</td>
        <td>10/20/2019</td>
        <td>Expense</td>
        </tr>
        <tr>
        <th scope="row">3</th>
        <td>+15.00</td>
        <td>10/21/2019</td>
        <td>Income</td>
        </tr>
    </tbody>
</table>

<form action="" method="post" id="trans-form">
    <br><br>
    New Transaction: <br><br>
    Amount:
        <input id="amount-input" type="number" name="numerical_input" value="">
    Date:
        <input id="date-input" type="date" name="date_input" value=""><br><br>
        <input id="income-radio" type="radio" name="type" value="income" checked> Income <br>
        <input type="radio" name="type" value="expense"> Expense <br><br>
    <input type="submit" value="Submit" id="trans-submit"><br><br>
</form>

